<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5DDBF"
    tools:context="be.pxl.filmapp.AddReviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <NumberPicker
            android:id="@+id/ratingPicker"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Enter Rating.."
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/descriptionField"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/ratingPicker"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Your opinion!"
            android:textSize="16sp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/descriptionField"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Send Review"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

</FrameLayout>
